{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "linter": {
    "enabled": false,
    "include": [],
    "ignore": ["**"]
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "linter": {
      "enabled": false
    },
    "formatter": {
      "quoteStyle": "single",
      "enabled": true,
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "trailingCommas": "es5"
    }
  },
  "formatter": {
    "indentWidth": 2,
    "lineEnding": "lf",
    "indentStyle": "space",
    "lineWidth": 120
  }
}
